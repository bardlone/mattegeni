
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38C0FB"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    tools:context="com.example.helloworld.CheckAnswersGradeOneLevelOne">
   
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ditt_svar"
        android:textSize="26sp" 
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="42dp"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="26sp" />

      <Button
          android:id="@+id/buttonneste"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView3"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="86dp"
          android:background="#00FF00"
          android:text="@string/neste" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          
          android:layout_centerVertical="true"
          android:gravity="center_horizontal"
          android:text="@string/resultat"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textSize="26sp" />

       <TextView
           android:id="@+id/mytw_two"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView3"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="@string/mytw_two"
           android:textSize="30sp" />

       <TextView
           android:id="@+id/score"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/textView3"
           android:layout_below="@+id/buttonneste"
           android:layout_marginLeft="47dp"
           android:layout_marginTop="22dp"
           android:text="@string/ccscore"
           android:textSize="24sp" />

    </RelativeLayout>